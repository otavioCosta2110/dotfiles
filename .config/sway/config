    mode 1920x1080@60Hz
    pos 1920 0
    bg ~/Pictures/wallpapers/terra3.png fill
}

output "eDP-1" {
    mode 1920x1080@60Hz
    pos 0 0
    bg ~/Pictures/wallpapers/terra3.png fill
}

